<Window x:Class="MusicPlayerUI.CreatePlayListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Playlist" Height="130" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Playlist Name -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="txtName" Margin="0,0,0,5"/>

        <!-- Public Checkbox --><!--
        <CheckBox Grid.Row="3" Grid.ColumnSpan="2" Name="chkIsPublic" Content="Public Playlist" Margin="0,0,0,10"/>-->

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnSave" Content="Save" Width="75" Margin="0,0,5,0" Click="btnSave_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="75" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
