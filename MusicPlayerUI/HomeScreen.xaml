<Window x:Class="MusicPlayerUI.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerUI"
        mc:Ignorable="d"
        Title="Music Player" Height="700" Width="1000"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#252525" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Music Player" Foreground="#E0E0E0" FontSize="24" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>

            <!-- User info in the middle -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock x:Name="UserNameText" Text="Guest" Foreground="#E0E0E0" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text=" | " Foreground="#808080" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock x:Name="RoleText" Text="Guest" Foreground="#1DB954" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Action buttons on the right -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Settings" Width="80" Height="30" Margin="10,0" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0" Click="SettingsButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Sign Out" Width="80" Height="30" Margin="10,0" Background="#1DB954" Foreground="White" BorderThickness="0" Click="SignOut_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0" Background="#252525">
                <StackPanel Margin="0,20,0,0">
                    <!-- Admin Panel Section -->
                    <Border x:Name="AdminPanel" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="ADMINISTRATION" Foreground="#808080" FontWeight="Bold" Margin="20,0,0,10"/>

                            <Button x:Name="ManageUsersButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="ManageUsers_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                                    <TextBlock Text="Manage Users" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="DeleteButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Delete_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                                    <TextBlock Text="Delete Content" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Content Management Section -->
                    <StackPanel Margin="0,0,0,20">
                        <Button x:Name="AddSongButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="AddSongButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎵" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                                <TextBlock Text="Add Song" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="AddArtistButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="AddArtistButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎤" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                                <TextBlock Text="Add Artist" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="AddAlbumButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="AddAlbumButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💿" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                                <TextBlock Text="Add Album" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Library Section -->
                    <TextBlock Text="LIBRARY" Foreground="#808080" FontWeight="Bold" Margin="20,0,0,10"/>

                    <Button x:Name="HomeButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="HomeButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⌂" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Home" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="MyMusicButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="MyMusicButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="♫" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="My Music" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="FavoritesButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="FavoritesButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="♥" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Favorites" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↓" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Downloads" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="PLAYLISTS" Foreground="#808080" FontWeight="Bold" Margin="20,20,0,10"/>

                    <Button x:Name="CreatePlaylistButton" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="CreatePlaylist_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Create Playlist" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <ListBox x:Name="PlaylistsListBox"
         Background="Transparent"
         BorderThickness="0"
         SelectionChanged="PlaylistsListBox_SelectionChanged"/>

                </StackPanel>
            </Grid>

            <!-- Content Panels -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <!-- We'll use a Grid with multiple views and control their visibility -->

                <!-- Home View (Default) -->
                <Grid x:Name="HomeView" Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20,20,20,0">
                            <!-- Welcome Section -->
                            <TextBlock Text="Home" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"/>

                            <!-- Top Songs Section -->
                            <Grid Margin="0,0,0,30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Section Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Top Songs" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <Button Grid.Column="1" Content="See All" Foreground="#1DB954" Background="Transparent" BorderThickness="0"/>
                                </Grid>

                                <!-- Songs List -->
                                <ListBox Grid.Row="1" x:Name="TopSongsList" Margin="0,10,0,0" Background="Transparent" BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0,0,15,15"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <!-- Sample Items - Will be populated programmatically -->
                                    <Border Width="200" Height="250" Background="#252525" CornerRadius="6">
                                        <StackPanel>
                                            <Border Width="175" Height="175" Background="#333333" Margin="0,12,0,8" CornerRadius="4">
                                                <TextBlock Text="♫" FontSize="70" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Falling Stars" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="12,0,12,0"/>
                                            <TextBlock Text="Luna Carter" Foreground="#B3B3B3" FontSize="12" Margin="12,4,12,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="200" Height="250" Background="#252525" CornerRadius="6">
                                        <StackPanel>
                                            <Border Width="175" Height="175" Background="#333333" Margin="0,12,0,8" CornerRadius="4">
                                                <TextBlock Text="♫" FontSize="70" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Ocean Waves" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="12,0,12,0"/>
                                            <TextBlock Text="The Soundwaves" Foreground="#B3B3B3" FontSize="12" Margin="12,4,12,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="200" Height="250" Background="#252525" CornerRadius="6">
                                        <StackPanel>
                                            <Border Width="175" Height="175" Background="#333333" Margin="0,12,0,8" CornerRadius="4">
                                                <TextBlock Text="♫" FontSize="70" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Mountain High" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="12,0,12,0"/>
                                            <TextBlock Text="The Soundwaves" Foreground="#B3B3B3" FontSize="12" Margin="12,4,12,0"/>
                                        </StackPanel>
                                    </Border>
                                </ListBox>
                            </Grid>

                            <!-- Top Albums Section -->
                            <Grid Margin="0,0,0,30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Section Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Top Albums" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <Button Grid.Column="1" Content="See All" Foreground="#1DB954" Background="Transparent" BorderThickness="0"/>
                                </Grid>

                                <!-- Albums List -->
                                <ListBox Grid.Row="1" x:Name="TopAlbumsList" Margin="0,10,0,0" Background="Transparent" BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0,0,15,15"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <!-- Sample Items - Will be populated programmatically -->
                                    <Border Width="200" Height="250" Background="#252525" CornerRadius="6">
                                        <StackPanel>
                                            <Border Width="175" Height="175" Background="#333333" Margin="0,12,0,8" CornerRadius="4">
                                                <TextBlock Text="💿" FontSize="70" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Midnight Echoes" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="12,0,12,0"/>
                                            <TextBlock Text="The Soundwaves" Foreground="#B3B3B3" FontSize="12" Margin="12,4,12,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="200" Height="250" Background="#252525" CornerRadius="6">
                                        <StackPanel>
                                            <Border Width="175" Height="175" Background="#333333" Margin="0,12,0,8" CornerRadius="4">
                                                <TextBlock Text="💿" FontSize="70" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Starlight" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="12,0,12,0"/>
                                            <TextBlock Text="Luna Carter" Foreground="#B3B3B3" FontSize="12" Margin="12,4,12,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="200" Height="250" Background="#252525" CornerRadius="6">
                                        <StackPanel>
                                            <Border Width="175" Height="175" Background="#333333" Margin="0,12,0,8" CornerRadius="4">
                                                <TextBlock Text="💿" FontSize="70" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Urban Poetry" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="12,0,12,0"/>
                                            <TextBlock Text="Rhythm Collective" Foreground="#B3B3B3" FontSize="12" Margin="12,4,12,0"/>
                                        </StackPanel>
                                    </Border>
                                </ListBox>
                            </Grid>

                            <!-- Popular Artists Section -->
                            <Grid Margin="0,0,0,30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Section Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Popular Artists" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <Button Grid.Column="1" Content="See All" Foreground="#1DB954" Background="Transparent" BorderThickness="0"/>
                                </Grid>

                                <!-- Artists List -->
                                <ListBox Grid.Row="1" x:Name="PopularArtistsList" Margin="0,10,0,0" Background="Transparent" BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0,0,20,15"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <!-- Sample Items - Will be populated programmatically -->
                                    <StackPanel Width="170" Height="220">
                                        <Border Width="170" Height="170" Background="#333333" CornerRadius="85">
                                            <TextBlock Text="T" FontSize="80" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="The Soundwaves" Foreground="White" FontSize="14" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>

                                    <StackPanel Width="170" Height="220">
                                        <Border Width="170" Height="170" Background="#333333" CornerRadius="85">
                                            <TextBlock Text="L" FontSize="80" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Luna Carter" Foreground="White" FontSize="14" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>

                                    <StackPanel Width="170" Height="220">
                                        <Border Width="170" Height="170" Background="#333333" CornerRadius="85">
                                            <TextBlock Text="R" FontSize="80" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Rhythm Collective" Foreground="White" FontSize="14" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </ListBox>
                            </Grid>

                            <!-- Recently Played Section -->
                            <Grid Margin="0,0,0,30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Section Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Recently Played" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                    <Button Grid.Column="1" Content="See All" Foreground="#1DB954" Background="Transparent" BorderThickness="0"/>
                                </Grid>

                                <!-- Recent Songs List -->
                                <ListView Grid.Row="1" x:Name="RecentlyPlayedList" Margin="0,10,0,0" Background="Transparent" BorderThickness="0" Foreground="White" MaxHeight="250">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Padding" Value="5" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#333333" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2A2A2A" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.View>
                                        <GridView AllowsColumnReorder="False">
                                            <GridViewColumn Header="TITLE" Width="250">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Foreground="White" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="ARTIST" Width="200">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Artist}" VerticalAlignment="Center" Foreground="White" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="ALBUM" Width="200">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Album}" VerticalAlignment="Center" Foreground="White" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="LAST PLAYED" Width="150">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding LastPlayed}" VerticalAlignment="Center" Foreground="White" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- My Music View -->
                <Grid x:Name="MyMusicView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- My Music Header -->
                    <Grid Grid.Row="0" Margin="20,20,20,0">
                        <TextBlock Text="My Music" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    </Grid>

                    <!-- Tab Control for My Music Categories -->
                    <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="20,20,20,0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="Border" BorderThickness="0,0,0,2" 
                                                        BorderBrush="Transparent" Padding="15,5">
                                                <ContentPresenter x:Name="ContentSite" 
                                                                      VerticalAlignment="Center" 
                                                                      HorizontalAlignment="Center" 
                                                                      ContentSource="Header"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#1DB954"/>
                                                    <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="#1DB954"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="#E0E0E0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <TabItem Header="Songs">
                            <ListView Background="Transparent" BorderThickness="0" Foreground="White">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#333333" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2A2A" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="TITLE" Width="250"/>
                                        <GridViewColumn Header="ARTIST" Width="200"/>
                                        <GridViewColumn Header="ALBUM" Width="200"/>
                                        <GridViewColumn Header="DURATION" Width="100"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>

                        <TabItem Header="Artists" x:Name="ArtistsTab">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Search Bar -->
                                <Grid Grid.Row="0" Margin="0,10,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#252525" CornerRadius="20" Height="40">
                                        <TextBox x:Name="ArtistSearchBox" Background="Transparent" BorderThickness="0"
                                                     Foreground="White" VerticalContentAlignment="Center" Padding="15,0"
                                                     FontSize="14" TextChanged="ArtistSearchBox_TextChanged">
                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="20"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                    </Border>

                                    <Button Grid.Column="1" Content="Search" Margin="10,0,0,0" Width="80" Height="40"
                                                Background="#1DB954" Foreground="White" BorderThickness="0" Click="SearchArtists_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="20"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>

                                <!-- Artists Grid -->
                                <WrapPanel Grid.Row="1" x:Name="ArtistsPanel" Orientation="Horizontal">
                                    <!-- Artists will be added here programmatically -->
                                </WrapPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Albums">
                            <TextBlock Text="Albums content goes here" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </TabItem>

                        <TabItem Header="Genres">
                            <TextBlock Text="Genres content goes here" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </TabItem>
                    </TabControl>
                </Grid>

                <!-- Favorites View -->
                <Grid x:Name="FavoritesView">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    
                    

                    <!-- Song List -->
                    <ListView x:Name="Favorite_List" Grid.Row="1" Margin="20,20,20,10" Background="Transparent" BorderThickness="0" Foreground="White"
                                  SelectionChanged="Favorite_List_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#333333" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Header="#" Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Index}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="TITLE" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="ARTIST" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Artist}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="ALBUM" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Album}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="DURATION" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Duration}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

                <!-- Playlist View -->
                <Grid x:Name="PlaylistView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Playlist Header -->
                    <Grid Grid.Row="0" Margin="20,20,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="150" Height="150" Background="#333333" CornerRadius="4">
                            <TextBlock Text="♫" FontSize="80" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="PLAYLIST" Foreground="#808080" FontSize="12"/>
                            <TextBlock x:Name="SelectedPlaylistNameText" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,10" Text="Selected Playlist"/>
                            <TextBlock x:Name="SelectedPlaylistInfoText" Text="0 songs • 0 minutes" Foreground="#808080" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="BtnAddSongToPlaylist"
            Content="Add Song"
            Height="30"
            Padding="10,0"
            Margin="0,0,10,0"
            Background="#1DB954"
            Foreground="White"
            Click="BtnAddSongToPlaylist_Click"/>

                            <Button x:Name="BtnRemoveSongFromPlaylist"
                    Content="Remove Song"
                    Height="30"
                    Padding="10,0"
                    Margin="0,0,10,0"
                    Background="#E02424"
                    Foreground="White"
                    Click="BtnRemoveSongFromPlaylist_Click"/>



                        </StackPanel>


                    </Grid>


                    <!-- Song List -->
                    <ListView x:Name="Playlist_Songs_List" Grid.Row="1" Margin="20,20,20,10" Background="Transparent" BorderThickness="0" Foreground="White"
                                  SelectionChanged="Playlist_Songs_List_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#333333" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Header="#" Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Index}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="TITLE" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="ARTIST" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Artist}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="ALBUM" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Album}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="DURATION" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Duration}" VerticalAlignment="Center" Foreground="White" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

                <!-- Artist Detail View -->
                <Grid x:Name="ArtistDetailView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Artist Header -->
                    <Grid Grid.Row="0" Margin="20,20,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Artist Image -->
                        <Border Grid.Column="0" Width="200" Height="200" Background="#333333" CornerRadius="100">
                            <TextBlock x:Name="ArtistInitial" Text="A" FontSize="100" Foreground="#1DB954" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Artist Info -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="ARTIST" Foreground="#808080" FontSize="12"/>
                            <TextBlock x:Name="ArtistNameText" Foreground="White" FontSize="42" FontWeight="Bold" Margin="0,5,0,10" Text="Artist Name"/>
                            <TextBlock x:Name="ArtistInfoText" Text="25 songs • 3 albums" Foreground="#808080" FontSize="16"/>

                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Button Content="Play All" Width="120" Height="40" Background="#1DB954" Foreground="White" 
                                            BorderThickness="0" Margin="0,0,10,0" Click="PlayAllArtistSongs_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="20"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <Button Content="Shuffle" Width="120" Height="40" Background="#3E3E3E" Foreground="White" 
                                            BorderThickness="0" Margin="10,0,0,0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="20"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Bio Section -->
                    <StackPanel Grid.Row="1" Margin="20,30,20,20">
                        <TextBlock Text="ABOUT" Foreground="#808080" FontSize="14" FontWeight="Bold"/>
                        <TextBlock x:Name="ArtistBioText" Foreground="White" FontSize="14" TextWrapping="Wrap" Margin="0,10,0,0" 
                                      Text="Artist biography will be displayed here."/>
                    </StackPanel>

                    <!-- Artist's Songs List -->
                    <Grid Grid.Row="2" Margin="20,0,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="POPULAR SONGS" Foreground="#808080" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                        <ListView x:Name="ArtistSongs_List" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="White"
                                      SelectionChanged="ArtistSongs_List_SelectionChanged">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Padding" Value="5" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#333333" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2A2A" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Header="#" Width="40">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Index}" VerticalAlignment="Center" Foreground="White" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="TITLE" Width="250">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Foreground="White" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ALBUM" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Album}" VerticalAlignment="Center" Foreground="White" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="DURATION" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Duration}" VerticalAlignment="Center" Foreground="White" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="PLAYS" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PlayCount}" VerticalAlignment="Center" Foreground="White" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>

        <!-- Song Progress -->
        <Grid Grid.Row="2" Background="#252525" Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Current Time -->
            <TextBlock x:Name="CurrentTimeText" Grid.Column="0" Text="0:00" Foreground="#B3B3B3" 
                       FontSize="10" VerticalAlignment="Center" Margin="10,0,5,0"/>
            
            <!-- Interactive Timeline Slider -->
            <Slider x:Name="SongProgressSlider" Grid.Column="1" Value="0" Maximum="100" 
                    Background="#3E3E3E" Foreground="#1DB954" BorderThickness="0"
                    IsMoveToPointEnabled="True" PreviewMouseDown="SongProgressSlider_PreviewMouseDown"
                    PreviewMouseUp="SongProgressSlider_PreviewMouseUp" 
                    ValueChanged="SongProgressSlider_ValueChanged">
                <Slider.Resources>
                    <Style TargetType="Thumb">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Ellipse Height="12" Width="12" Fill="#1DB954"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Slider.Resources>
            </Slider>
            
            <!-- Total Time -->
            <TextBlock x:Name="TotalTimeText" Grid.Column="2" Text="0:00" Foreground="#B3B3B3" 
                       FontSize="10" VerticalAlignment="Center" Margin="5,0,10,0"/>
        </Grid>

        <!-- Player Controls -->
        <Grid Grid.Row="3" Background="#252525" Height="90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Now Playing -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Border Width="60" Height="60" Background="#333333" CornerRadius="4">
                    <TextBlock Text="♫" FontSize="32" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="song_name" Text="Select a song" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="song_artist" Text="No artist" Foreground="#B3B3B3" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
                <Button x:Name="NowPlayingFavoriteButton"
        Content="♥"
        FontSize="18"
        Foreground="#1DB954"
        Background="Transparent"
        BorderThickness="0"
        Margin="15,0,0,0"
        Padding="10,0"
        Click="NowPlayingFavoriteButton_Click"/>

            </StackPanel>

            <!-- Controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ShuffleBtn" Content="🔀" FontSize="14" Foreground="#B3B3B3" Background="Transparent" BorderThickness="0" Padding="15,0" Click="ShuffleBtn_Click"/>
                <Button x:Name="PrevButton" Content="◀◀" FontSize="14" Foreground="#E0E0E0" Background="Transparent" BorderThickness="0" Padding="15,0" Click="PreviousSong_Click"/>
                <Button x:Name="PlayBtn" Content="▶" FontSize="24" Foreground="White" Background="#1DB954" BorderThickness="0" Width="40" Height="40" Margin="10,0" Click="PlaySong">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="NextButton" Content="▶▶" FontSize="14" Foreground="#E0E0E0" Background="Transparent" BorderThickness="0" Padding="15,0" Click="NextSong_Click"/>
                <Button x:Name="LoopBtn" Content="↻" FontSize="18" Foreground="#B3B3B3" Background="Transparent" BorderThickness="0" Padding="15,0" Click="ToggleLoop_Click"/>
            </StackPanel>

            <!-- Volume -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Content="🔊" FontSize="14" Foreground="#E0E0E0" Background="Transparent" BorderThickness="0" Padding="10,0"/>
                <Slider x:Name="VolumeSlider" Width="100" Value="70" Maximum="100" Margin="10,0" Background="#3E3E3E" Foreground="#1DB954" ValueChanged="VolumeSlider_ValueChanged"/>
                <!-- Add this to HomeScreen.xaml inside the player controls section, 
     right after the volume controls in the Grid.Column="2" StackPanel -->

                <Separator Margin="10,0" Width="1" Height="20" Background="#3E3E3E"/>
                <Button x:Name="GestureControlButton" 
        Content="👋" 
        FontSize="18" 
        ToolTip="Control with hand gestures"
        Foreground="#E0E0E0" 
        Background="Transparent" 
        BorderThickness="0" 
        Padding="10,0"
        Click="GestureControlButton_Click"/>

                <!-- Add this popup for the camera feed at the end of your window, just before the closing </Grid> -->
                <Popup x:Name="CameraPopup" 
       PlacementTarget="{Binding ElementName=GestureControlButton}" 
       Placement="Top" 
       AllowsTransparency="True" 
       PopupAnimation="Fade" 
       StaysOpen="False">
                    <Border Background="#252525" 
            BorderBrush="#1DB954" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Hand Gesture Control" 
                           Foreground="#E0E0E0" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                                <Image x:Name="CameraPreviewImage" 
                       Width="640" 
                       Height="480" 
                       Stretch="Uniform"/>

                                <TextBlock x:Name="GestureStatusText" 
                           Text="Waiting for gesture..." 
                           Foreground="#1DB954" 
                           FontSize="14" 
                           Margin="0,10,0,10" 
                           TextAlignment="Center"/>

                                <TextBlock Text="Gestures:" 
                           Foreground="#E0E0E0" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                                <TextBlock Text="• Move hand left/right: Previous/Next song" 
                           Foreground="#B3B3B3" 
                           FontSize="12" 
                           Margin="10,0,0,3"/>

                                <TextBlock Text="• Open/Close hand: Play/Pause" 
                           Foreground="#B3B3B3" 
                           FontSize="12" 
                           Margin="10,0,0,3"/>

                                <TextBlock Text="• Move hand up/down: Volume control" 
                           Foreground="#B3B3B3" 
                           FontSize="12" 
                           Margin="10,0,0,3"/>

                                <TextBlock Text="• Wave hand: Play random song" 
                           Foreground="#B3B3B3" 
                           FontSize="12" 
                           Margin="10,0,0,3"/>

                                <Button Content="Close" 
                        Background="#3E3E3E" 
                        Foreground="#E0E0E0" 
                        BorderThickness="0" 
                        Margin="0,10,0,0" 
                        Padding="10,5" 
                        HorizontalAlignment="Center"
                        Click="CloseGestureControl_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>

                            <!-- Overlay for no camera access -->
                            <Border x:Name="NoCameraOverlay" Background="#80000000" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="No Camera Access" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"
                           TextAlignment="Center"/>
                                    <TextBlock Text="Running in simulation mode" 
                           Foreground="#B3B3B3" 
                           FontSize="16"
                           TextAlignment="Center"
                           Margin="0,10,0,20"/>
                                    <TextBlock Text="Random gestures will be detected&#x0a;to demonstrate functionality" 
                           Foreground="White" 
                           FontSize="14"
                           TextAlignment="Center"
                           Margin="20"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Popup>
            </StackPanel>

        </Grid>
        <!-- Update Profile Form -->
        <Grid x:Name="UpdateProfilePanel" Visibility="Collapsed">
            <Border Width="400" VerticalAlignment="Center" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Update Profile" Foreground="White" FontSize="32" FontWeight="Bold" 
                       HorizontalAlignment="Left" Margin="0,0,0,40"/>

                    <TextBlock Text="EMAIL" Foreground="#808080" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Border Background="#252525" CornerRadius="6" Height="50" Margin="0,0,0,20">
                        <TextBox x:Name="UpdateEmail" Background="Transparent" BorderThickness="0" Foreground="White"
                         VerticalContentAlignment="Center" Padding="15,0" FontSize="14"/>
                    </Border>

                    <TextBlock Text="USERNAME" Foreground="#808080" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Border Background="#252525" CornerRadius="6" Height="50" Margin="0,0,0,20">
                        <TextBox x:Name="UpdateUsername" Background="Transparent" BorderThickness="0" Foreground="White"
                         VerticalContentAlignment="Center" Padding="15,0" FontSize="14"/>
                    </Border>

                    <TextBlock Text="FULL NAME" Foreground="#808080" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Border Background="#252525" CornerRadius="6" Height="50" Margin="0,0,0,20">
                        <TextBox x:Name="UpdateFullName" Background="Transparent" BorderThickness="0" Foreground="White"
                         VerticalContentAlignment="Center" Padding="15,0" FontSize="14"/>
                    </Border>

                    <TextBlock Text="PROFILE PICTURE URL" Foreground="#808080" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Border Background="#252525" CornerRadius="6" Height="50" Margin="0,0,0,20">
                        <TextBox x:Name="UpdateProfilePicture" Background="Transparent" BorderThickness="0" Foreground="White"
                         VerticalContentAlignment="Center" Padding="15,0" FontSize="14"/>
                    </Border>

                    <Button Content="SAVE CHANGES" Height="50" Background="#1DB954" Foreground="White" BorderThickness="0" 
                    FontSize="14" FontWeight="Bold" Margin="0,10,0,0" Click="UpdateProfileSubmit_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    
</Window>